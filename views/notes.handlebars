<div class="container-fluid">
{{#if notes}}
  <ul class="list-group">
  {{#each notes}}
    <li class="list-group-item">
      <div class="card" data-id={{_id}}>
        <div class="card-body">
          <p class="note card-text d-inline">{{author}}: {{body}}</p>
          <a class="note-delete btn btn-sm btn-danger mt-0 float-right" href="#">X</a>
        </div>
      </div>
    </li>
  {{/each}}
  </ul>
{{else}}
  <div class="card">
    <div class="card-body">
      <p class="note card-text d-inline">No notes currently exist. Add the first one!</p>
    </div>
  </div>
{{/if}}
  <div class="container border border-secondary mt-2" id="note-container" data-id={{id}}>
    <div class="form-group">
        <label for="note-name"></label>
        <textarea class="form-control rounded-0" id="note-name" rows="1">Name</textarea>
    </div>
    <div class="form-group">
        <label for="note-body"></label>
        <textarea class="form-control rounded-0" id="note-body" rows="10">Write your note here</textarea>
    </div>
  </div>
</div>
