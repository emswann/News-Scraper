<nav class="navbar fixed-top navbar-expand-lg navbar-dark primary-color scrolling-navbar">
  <a class="navbar-brand" href="#"><i class="fa fa-newspaper-o mr-1" aria-hidden="true"></i><strong>Saved Articles</strong></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto" id="navbar-list">
      <li class="nav-item" id="home">
        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item active" id="saved">
        <a class="nav-link" href="#">Saved Articles</a>
      </li>
  </div>
</nav>

<div class="jumbotron jumbotron-fluid h-50 z-depth-4">
  <div class="container mt-5">
    <h1 class="h1-reponsive mb-4 white-text text-center font-bold">Saved Articles</h1>
    <p class="lead white-text text-center">Your Saved Articles</p>
  </div>
</div>

{{#if headlines}}
<div class="container-fluid">
  {{#each headlines}}
  <div class="row headline mt-3 z-depth-4 rounded">
    <div class="col-md-12">
      <div class="card" data-id={{_id}}>
        <div class="card-header primary-color">
          <h3>
            <a class="hl-link align-middle white-text" target=_blank href={{link}}>{{title}}</a>
            <a class="hl-delete btn btn-danger float-right" href="#">DELETE FROM SAVED</a>
            <a class="hl-notes btn btn-secondary float-right" href="#">ARTICLE NOTES</a>
          </h3>
        </div>
        <div class="card-body">
          <p class="card-text">{{byline}}</p>
          <p class="card-text">{{summary}}</p>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
